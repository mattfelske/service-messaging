{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "standard",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "globals": {
    "jQuery": true,
    "$": true
  },
  "rules": {
    // See http://eslint.org/docs/rules/ for a list of all rules.

    "standard/object-curly-even-spacing": 0,
    "standard/no-callback-literal": 1,

    // Possible Errors
    "no-console": 2,
    "no-constant-condition": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-unexpected-multiline": 2,
    "valid-jsdoc": [1, {
      "requireReturn": false
    }],
    "valid-typeof": 2,

    // Best practices
    "no-alert": 2,
    "no-multi-spaces": [1, {
    "ignoreEOLComments": true,
      "exceptions": {
        "VariableDeclarator": true,
        "ImportDeclaration": true
      }
    }],
    "no-redeclare": 2,
    "no-useless-escape": 1,

    // Variables
    "no-undef": 2,
    "no-unused-vars": 1,

    // Node.js and CommonJS
    "handle-callback-err": 2,
    "no-sync": 1,

    // Stylistic
    "camelcase": 2,
    "comma-dangle": 1,
    "func-call-spacing": [2, "never"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "key-spacing": [2, {
      "singleLine": {
        "beforeColon": false,
        "afterColon":  true
      },
      "multiLine": {
        "beforeColon": false,
        "afterColon":  true,
        "align":       "value"
      }
    }],
    "keyword-spacing": 2,
    "new-cap": 2,
    "no-multiple-empty-lines": [2, {"max": 2 }],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "padded-blocks": 0,
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": 0,
    "space-infix-ops": [2, { "int32Hint": true }],

    // ECMAScript 6
    "arrow-parens": 2,
    "no-confusing-arrow": 2,

  }
}
